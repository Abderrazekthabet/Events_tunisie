<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Here we setting appcompat’s actionBarStyle -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="colorPrimary">@color/material_drawer_primary</item>
        <item name="colorPrimaryDark">@color/material_drawer_primary_dark</item>
        <item name="colorAccent">@color/material_drawer_accent</item>

        <item name="android:windowBackground">@color/material_drawer_background</item>

        <item name="android:alertDialogTheme">@style/BaseTheme.Dialog</item>

        <!--<item name="android:popupMenuStyle">@style/MyApp.PopupMenu</item>-->
        <!--<item name="android:actionBarWidgetTheme">@style/PopupMenuTextView</item>-->
    </style>

    <style name="BaseTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Here we setting appcompat’s actionBarStyle -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="colorPrimary">@color/material_drawer_primary</item>
        <item name="colorPrimaryDark">@color/material_drawer_primary_dark</item>
        <item name="colorAccent">@color/material_drawer_accent</item>

        <item name="android:windowBackground">@color/material_drawer_background</item>

        <item name="android:alertDialogTheme">@style/BaseTheme.Dialog</item>
    </style>



    <style name="AppTheme.Light" parent="BaseTheme.Light">
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="BaseTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/material_drawer_primary</item>
        <item name="colorPrimaryDark">@color/material_drawer_primary_dark</item>
        <item name="colorAccent">@color/material_drawer_accent</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />


    <!-- Styles for BUTTON type SuperActivityToasts -->
    <style name="DefaultRootLayout">
        <item name="android:background">@drawable/background_standard_gray</item>
    </style>

    <style name="DefaultText">
        <item name="android:text">Default</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>


    <style name="SuperActivityToast_Button_RootLayout" parent="DefaultRootLayout">
        <item name="android:layout_marginBottom">@dimen/buttontoast_hover</item>
        <item name="android:layout_marginLeft">@dimen/buttontoast_x_padding</item>
        <item name="android:layout_marginRight">@dimen/buttontoast_x_padding</item>
    </style>

    <style name="SuperActivityToast_Button_TextView" parent="DefaultText">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="SuperActivityToast_Button_Divider">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="SuperActivityToast_Button_Button">
        <item name="android:background">@drawable/selector_undobutton</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Styles for PROGRESS type SuperActivityToasts -->

    <style name="SuperActivityToast_Progress_ProgressBar" parent="android:Widget.Holo.ProgressBar">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="SuperActivityToast_Progress_TextView" parent="DefaultText">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Styles for PROGRESS_HORIZONTAL type SuperActivityToasts -->

    <style name="SuperActivityToast_ProgressHorizontal_RootLayout" parent="DefaultRootLayout">
        <item name="android:minWidth">128dp</item>
    </style>

    <style name="SuperActivityToast_ProgressHorizontal_TextView" parent="DefaultText">
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="SuperActivityToast_ProgressHorizontal_ProgressBar" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- ****************************************************************************************-->


    <style name="coloredRatingBarStyle">
        <item name="indicator">false</item>
        <item name="type">normal</item>
    </style>

    <style name="coloredRatingBarStyleIndicator">
        <item name="indicator">true</item>
        <item name="type">normal</item>
    </style>

    <style name="coloredRatingBarStyleSmall">
        <item name="indicator">false</item>
        <item name="type">small</item>
    </style>

    <style name="coloredRatingBarStyleSmallIndicator">
        <item name="indicator">true</item>
        <item name="type">small</item>
    </style>

    <!-- Defines the custom XML attributes supported for a HorizontalListView -->
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <style name="MyTextView">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>


    <!--Menu style-->

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" >
    <item name="android:background">@color/link_text_material_light</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textSize">18sp</item>
    </style>


    <!-- The beef: background color for Action Bar overflow menu -->
    <!--<style name="MyApp.PopupMenu" parent="android:Theme.Holo.Light">-->
        <!--<item name="android:popupBackground">@drawable/font</item>-->

    <!--</style>-->

    <!--&lt;!&ndash; Change Overflow Menu ListView Text Size and Text Size &ndash;&gt;-->
