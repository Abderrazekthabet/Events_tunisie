<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/font"

    tools:context="material_design.soussi.com.events_tunisie.No_connexion">

    <material_design.soussi.com.events_tunisie.swip_to_refrech.SwipyRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/swipyrefreshlayout"
        app:direction="both"
        android:layout_height="match_parent">

       <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/frame"
            android:layout_height="match_parent"
            android:orientation="horizontal">




    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/icon19"

        android:layout_gravity="top|center"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"

        android:src="@drawable/kharja1"

        />


    <RelativeLayout
        android:id="@+id/contentDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:elevation="10dp"
        android:background="@drawable/dialog_background"
        android:padding="18dp">



    <TextView
        android:text="vérifiez la connexion et réessayez plus tard ."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="22dp"
        android:id="@+id/btn_connect_ref"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceLargeInverse"
        android:textColor="#880700" />




    </RelativeLayout>
           <!--<ProgressBar-->
               <!--style="?android:attr/progressBarStyleSmall"-->
               <!--android:layout_width="70dp"-->
               <!--android:layout_height="70dp"-->
               <!--android:layout_centerVertical="true"-->
               <!--android:layout_centerHorizontal="true"-->
               <!--android:id="@+id/progressBar_connect"-->
                <!--/>-->
           <material_design.soussi.com.events_tunisie.material_progressbar.ProgressWheel
               android:layout_width="90dp"
               android:layout_height="90dp"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"
               app:matProg_barColor="#5588FF"
               app:matProg_progressIndeterminate="true"
               android:id="@+id/progressBar_connect"/>

          <!-- <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               />-->
<material_design.soussi.com.events_tunisie.material_button.ButtonFlat
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:text="Réessayez"
    android:elevation="10dp"
    android:layout_below="@+id/contentDialog"
    android:id="@+id/btn_ref"
    android:layout_marginTop="20dp"
    android:background="#3CCD88"

    app:animate="true"
    android:layout_centerHorizontal="true"
    >

</material_design.soussi.com.events_tunisie.material_button.ButtonFlat>

       </RelativeLayout>

    </material_design.soussi.com.events_tunisie.swip_to_refrech.SwipyRefreshLayout>


</RelativeLayout>
