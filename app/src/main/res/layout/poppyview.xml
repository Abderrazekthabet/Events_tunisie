<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"



    android:padding="15dp">
    <material_design.soussi.com.events_tunisie.material_button.ButtonFloat
        android:layout_width="wrap_content"

        android:id="@+id/calendar_syn1"
        android:hint="calendar"
        android:layout_marginTop="15dp"
        android:cursorVisible="true"
        app:iconPadding="0dp"
        app:maxCharacters="25"
        app:floatingLabel="highlight"
        app:baseColor="#fff"
        app:primaryColor="#2196F3"

        app:animate="true"
        android:textSize="22sp"
        android:layout_marginLeft="11dp"
        app:iconDrawable="@drawable/icon_calendar1"

        app:helperTextColor="#1199c0"


        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

    </material_design.soussi.com.events_tunisie.material_button.ButtonFloat>

    <material_design.soussi.com.events_tunisie.material_button.ButtonFloat
        android:layout_width="wrap_content"

        android:id="@+id/gotomap"
        android:hint="calendar"
        android:layout_marginTop="15dp"
        android:cursorVisible="true"
        app:iconPadding="0dp"
        app:maxCharacters="25"
        app:floatingLabel="highlight"
        app:baseColor="#fff"
        app:primaryColor="#2196F3"

        app:animate="true"
        android:textSize="22sp"
        android:layout_marginRight="75dp"
        app:iconDrawable="@drawable/map1"

        app:helperTextColor="#1199c0"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">

    </material_design.soussi.com.events_tunisie.material_button.ButtonFloat>
</RelativeLayout>